<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiApp15.VistaModelo"
             x:Class="MauiApp15.Vistas.VistaRegistro"
             Title="VistaRegistro">
    <ContentPage.BindingContext>
        <vm:ValidadorRegistro/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label Text="Nombre:"/>
        <Entry Text="{Binding String1}"/>
        <Label Text="Apellido:"/>
        <Entry Text="{Binding String1}"/>
        <Label Text="DNI:"/>
        <Entry Text="{Binding Dni}"/>
        <Label Text="Edad:"/>
        <Entry Text="{Binding Edad}"/>
        <Button Text="Validar" Command="{Binding validarCommand}"/>

        <CollectionView ItemsSource="{Binding Errores}"/>
    </VerticalStackLayout>
</ContentPage>